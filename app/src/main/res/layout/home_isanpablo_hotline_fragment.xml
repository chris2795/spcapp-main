<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">


                <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                                android:id="@+id/linearLayout3"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:background="@color/colorPrimary"
                                android:orientation="vertical"
                                app:layout_constraintEnd_toEndOf="parent"

                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent">

                                <RelativeLayout
                                        android:layout_width="fill_parent"
                                        android:layout_height="wrap_content"
                                        tools:ignore="UselessLeaf" />

                        </LinearLayout>

                        <LinearLayout
                                android:id="@+id/linearLayout4"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:background="@drawable/circle_back"
                                android:forceHasOverlappingRendering="true"
                                android:gravity="center"
                                android:visibility="visible"
                                android:weightSum="1"
                                app:layout_constraintBottom_toBottomOf="@+id/linearLayout3"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
                                tools:ignore="UnusedAttribute">

                                <ImageView
                                        android:layout_width="55dp"
                                        android:layout_height="55dp"
                                        android:layout_margin="5dp"
                                        app:srcCompat="@drawable/logo_home_mysanpablo"
                                        tools:ignore="ContentDescription" />

                        </LinearLayout>

                </android.support.constraint.ConstraintLayout>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingStart="20dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:id="@+id/txt_title_ch"
                        android:text="@string/san_pablo_city_hotlines"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20sp"
                        tools:ignore="RtlSymmetry" />




                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="match_parent"
                                android:id="@+id/linear_ch_hotlines"
                              android:orientation="vertical">


                        <ListView
                                android:layout_margin="5dp"
                                android:id="@+id/listview_cityhotline"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginLeft="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="400dp"
                                android:scrollbars="vertical"
                                android:scrollbarSize="5dp"
                                android:scrollbarStyle="insideInset"
                                android:nestedScrollingEnabled="true"

                                tools:ignore="NestedScrolling" />

                </LinearLayout>




                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginTop="20dp">
                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <ImageView
                                        android:layout_width="100dp"
                                        android:layout_height="70dp"
                                        app:srcCompat="@drawable/phlogo"
                                        tools:ignore="ContentDescription" />


                        </LinearLayout>

                        <LinearLayout
                                android:layout_width="150dp"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="18dp"
                                        android:text="@string/Reps"
                                        android:textSize="10sp"
                                        android:textColor="@color/colorPrimary"
                                        android:textAlignment="center"
                                        android:gravity="center"
                                        android:textStyle="bold"
                                        tools:ignore="SmallSp,SpUsage" />

                                <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="@string/Rep"
                                        android:textSize="10sp"
                                        android:textColor="@color/colorPrimary"
                                        android:textAlignment="center"
                                        android:gravity="center"
                                        android:layout_marginBottom="5dp"
                                        tools:ignore="SmallSp" />

                                <TextView
                                        android:text="@string/_2019_san_pablo_city_goverment"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textSize="10sp"
                                        android:gravity="center"
                                        android:textColor="@color/colorPrimary"
                                        android:textAlignment="center"
                                        android:layout_marginEnd="8dp"
                                        android:layout_marginStart="8dp"
                                        android:id="@+id/textView8"
                                        tools:ignore="SmallSp" />

                        </LinearLayout>
                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <ImageView
                                        android:layout_width="100dp"
                                        android:layout_height="70dp"
                                        app:srcCompat="@drawable/transpa"
                                        tools:ignore="ContentDescription" />
                        </LinearLayout>
                </LinearLayout>

                <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_marginBottom="10dp"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                tools:ignore="UseCompoundDrawables">
                                <TextView
                                        android:text="Developed by:"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textSize="13sp"
                                        android:gravity="center"
                                        android:layout_marginStart="5dp"
                                        android:textColor="@color/colorPrimary"
                                        android:textAlignment="center"
                                        android:layout_marginEnd="3dp"
                                        tools:ignore="HardcodedText" />
                                <ImageView
                                        android:layout_width="80dp"
                                        android:layout_height="21dp"
                                        app:srcCompat="@drawable/pylon"
                                        android:layout_marginEnd="13dp"
                                        tools:ignore="ContentDescription" />
                        </LinearLayout>
                        <LinearLayout

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                        android:text="@string/developer"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textSize="13sp"
                                        android:gravity="center"
                                        android:layout_marginStart="5dp"
                                        android:textColor="@color/colorPrimary"
                                        android:textAlignment="center"
                                        />
                                <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">
                                        <TextView
                                                android:text="@string/chris_velasco"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:textSize="13sp"
                                                android:gravity="center"
                                                android:textColor="@color/colorPrimary"
                                                android:textAlignment="center" />
                                        <TextView
                                                android:text="@string/joseph_bonilla"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:textSize="13sp"
                                                android:gravity="center"
                                                android:textColor="@color/colorPrimary"
                                                android:textAlignment="center" />
                                </LinearLayout>
                        </LinearLayout>
                </LinearLayout>

        </LinearLayout>
</ScrollView>