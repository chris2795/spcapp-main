<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background"
            android:paddingTop="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical">


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="7dp">




            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp"
                    android:gravity="center">
                <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/spc_logo2"
                        android:id="@+id/imageView2"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="4dp"/>
                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:paddingLeft="15dp">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Republic of the Philippines"
                            android:textColor="@color/white"
                            android:layout_marginTop="5dp"
                            android:textSize="17dp"
                    />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CITY GOVERNMENT OF SAN PABLO"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:textSize="23sp"
                            android:layout_marginTop="3dp"

                    />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>


        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:orientation="vertical">

            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="BUSINESS PROFILE"
                      android:textStyle="bold"
                      android:textSize="25sp"
                      android:paddingBottom="20dp"
                      android:textColor="@color/white"
                      android:gravity="center"/>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_margin="5dp"
                          android:id="@+id/ll_bplo_1"
                          android:padding="5dp"
                          android:orientation="vertical"
                          android:background="@drawable/text_border">


                <!--<TextView android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:textSize="18sp"-->
                <!--android:text="New Application"-->
                <!--android:textStyle="bold"-->
                <!--android:textColor="@color/white"-->
                <!--android:layout_marginBottom="10dp"/>-->

                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal"
                              android:gravity="center">

                    <LinearLayout android:layout_width="250dp"
                                  android:layout_height="80dp"
                                  android:orientation="vertical"
                                  android:padding="5dp">

                        <TextView android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:textColor="@color/white"
                                  android:textStyle="bold"
                                  android:textSize="18sp"
                                  android:text="Businesss ID"/>

                        <EditText android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:contextClickable="false"
                                  android:textSize="18sp"
                                  android:clickable="false"
                                  android:inputType="number"
                                  android:hint="1223"
                                  android:textColor="@color/white"
                                  android:textColorHint="@color/white"
                                  android:id="@+id/txt_bplo_business_id"/>

                    </LinearLayout>
                    <LinearLayout android:layout_width="250dp"
                                  android:layout_height="80dp"
                                  android:orientation="vertical"
                                  android:padding="5dp">

                        <TextView android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:text="Mode of Payment:"
                                  android:textColor="@color/white"
                                  android:textSize="18sp"
                                  android:textStyle="bold"/>


                        <EditText android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:textColor="@color/white"
                                  android:textSize="18sp"
                                  android:text="Annually"
                                  android:clickable="false"
                                  android:contextClickable="false"
                                  android:id="@+id/rb_mode_of_payment_annually"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_margin="5dp"
                          android:gravity="center"
                          android:layout_gravity="center"
                          android:id="@+id/ll_bplo_2"
                          android:orientation="vertical"
                          android:background="@drawable/text_border">

                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal"
                              android:layout_gravity="center"
                              android:gravity="center"
                              android:layout_margin="10dp"
                              android:padding="3dp">

                    <LinearLayout android:layout_width="270dp"
                                  android:padding="8dp"
                                  android:layout_height="wrap_content"
                                  android:orientation="vertical"

                    >
                        <TextView android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:textColor="@color/white"
                                  android:textStyle="bold"
                                  android:textSize="18sp"
                                  android:text="Date Application"/>


                        <EditText android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:contextClickable="false"

                                  android:textSize="18sp"
                                  android:inputType="date"
                                  android:hint="yy/dd/mm"
                                  android:textColor="@color/white"
                                  android:textColorHint="@color/white"
                                  android:clickable="false"
                                  android:id="@+id/txt_bplo_date_application"/>
                        <EditText android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:contextClickable="false"
                                  android:textSize="18sp"
                                  android:inputType="number"
                                  android:hint="Reference No."
                                  android:textColor="@color/white"
                                  android:textColorHint="@color/white"
                                  android:clickable="false"

                                  android:id="@+id/txt_bplo_ref_number"/>

                        <EditText android:layout_width="match_parent"
                                 android:layout_height="wrap_content"
                                    android:hint="Association"
                                  android:textColor="@color/white"
                                  android:textSize="15sp"
                                  android:textColorHint="@color/white"
                                 android:layout_marginBottom="5dp"
                                 android:layout_marginTop="5dp"
                                 android:id="@+id/spinner_bplo_association"/>
                        <TextView android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:textColor="@color/white"
                                  android:textStyle="bold"
                                  android:textSize="18sp"
                                  android:text=""/>

                    </LinearLayout>


                    <LinearLayout android:layout_width="270dp"
                                  android:padding="8dp"
                                  android:layout_height="wrap_content"
                                  android:orientation="vertical"
                    >

                        <!--<TextView android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:textColor="@color/white"-->
                        <!--android:textStyle="bold"-->
                        <!--android:textSize="18sp"-->
                        <!--android:text=""/>-->
                        <EditText android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:textSize="18sp"
                                  android:inputType="number"
                                  android:clickable="false"
                                  android:hint="DTI/SEC/CDA Registration No."
                                  android:textColor="@color/white"
                                  android:textColorHint="@color/white"
                                  android:id="@+id/txt_bplo_dti_registration_num"/>
                        <TextView android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:textColor="@color/white"
                                  android:textStyle="bold"
                                  android:textSize="18sp"
                                  android:text="DTI/SEC/CDA Date of Registration:"/>
                        <EditText android:layout_width="match_parent"
                                  android:layout_height="wrap_content"

                                  android:textSize="18sp"
                                  android:inputType="date"
                                  android:hint="yy/dd/mm"

                                  android:textColor="@color/white"
                                  android:textColorHint="@color/white"
                                  android:clickable="false"
                                  android:id="@+id/txt_bplo_date_dti_registration"/>
                        <EditText android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:textSize="18sp"
                                  android:clickable="false"
                                  android:inputType="number"
                                  android:hint="TIN no."
                                  android:textColor="@color/white"
                                  android:textColorHint="@color/white"
                                  android:id="@+id/txt_bplo_tin_num"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="vertical"
                              android:layout_marginStart="10dp"
                              android:layout_marginBottom="10dp"
                              android:layout_marginEnd="10dp">
                    <TextView android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:textSize="18sp"
                              android:textColor="@color/white"
                              android:text="Are you enjoying tax incentive from any government?" />


                    <RadioGroup android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:id="@+id/rg_bplo_government_entity">

                        <RadioButton android:layout_width="wrap_content"
                                     android:layout_height="wrap_content"
                                     android:text="Yes"
                                     android:clickable="false"
                                     android:textSize="18sp"
                                     android:textColor="@color/white"
                                     android:id="@+id/rb_bplo_government_yes"/>
                        <RadioButton android:layout_width="wrap_content"
                                     android:layout_height="wrap_content"
                                     android:text="No"
                                     android:clickable="false"
                                     android:textSize="18sp"
                                     android:textColor="@color/white"
                                     android:id="@+id/rb_bplo_government_no"/>

                    </RadioGroup>
                    <EditText android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:hint="Please Sepicify Entity"
                              android:textColor="@color/white"
                              android:textColorHint="@color/white"
                              android:textSize="18sp"
                              android:maxLength="200"
                              android:clickable="false"
                              android:id="@+id/txt_bplo_government_entity"/>

                    <TextView android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:textSize="18sp"
                              android:textColor="@color/white"
                              android:text="Is the Establishment CCTV equipped?"/>
                    <RadioGroup android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:id="@+id/rg_bplo_cctv">

                        <RadioButton android:layout_width="wrap_content"
                                     android:layout_height="wrap_content"
                                     android:text="Yes"
                                     android:clickable="false"
                                     android:textSize="18sp"
                                     android:textColor="@color/white"
                                     android:id="@+id/rb_bplo_cctv_yes"/>
                        <RadioButton android:layout_width="wrap_content"
                                     android:layout_height="wrap_content"
                                     android:text="No"
                                     android:clickable="false"
                                     android:textSize="18sp"
                                     android:textColor="@color/white"
                                     android:id="@+id/rb_cctv_no"/>
                    </RadioGroup>

                    <EditText android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:hint="Number of Cameras"
                              android:textColor="@color/white"
                              android:textColorHint="@color/white"
                              android:textSize="18sp"
                              android:maxLength="200"
                              android:clickable="false"
                              android:inputType="number"
                              android:id="@+id/txt_bplo_cctv_number_of_cameras"/>

                </LinearLayout>
            </LinearLayout>


            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_margin="5dp"
                          android:id="@+id/ll_bplo_3"
                          android:orientation="vertical"
                          android:background="@drawable/text_border">

                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:textColor="@color/white"
                          android:layout_marginEnd="10dp"
                          android:layout_marginStart="10dp"
                          android:layout_marginTop="10dp"
                          android:textStyle="bold"
                          android:textSize="20sp"
                          android:text="Name of Taxpayer / Registrant"/>

                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="vertical"
                              android:layout_margin="10dp">

                    <EditText android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:hint="Last Name"
                              android:clickable="false"
                              android:textColor="@color/white"
                              android:textColorHint="@color/white"
                              android:textSize="18sp"

                              android:inputType="textPersonName"
                              android:id="@+id/txt_bplo_name_of_taxpayer_lname"/>

                    <EditText android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:hint="First Name"
                              android:textColor="@color/white"
                              android:textColorHint="@color/white"
                              android:textSize="18sp"
                              android:clickable="false"
                              android:inputType="textPersonName"
                              android:id="@+id/txt_bplo_name_of_taxpayer_fname"/>

                    <EditText android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:hint="Middle Name"
                              android:textColor="@color/white"
                              android:textColorHint="@color/white"
                              android:textSize="18sp"
                              android:clickable="false"
                              android:inputType="textPersonName"
                              android:id="@+id/txt_bplo_name_of_taxpayer_mname"/>

                    <EditText android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:hint="Business Name"
                              android:textColor="@color/white"
                              android:textColorHint="@color/white"
                              android:textSize="18sp"

                              android:clickable="false"
                              android:inputType="textPersonName"
                              android:id="@+id/txt_bplo_name_of_taxpayer_business_name"/>

                    <EditText android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:hint="Trade Name/Franchise"
                              android:textColor="@color/white"
                              android:textColorHint="@color/white"
                              android:textSize="18sp"
                              android:clickable="false"
                              android:inputType="textPersonName"
                              android:id="@+id/txt_bplo_name_of_taxpayer_trade_name"/>

                    <EditText android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:hint="Name of President/Treasurer Corporation"
                              android:textColor="@color/white"
                              android:textColorHint="@color/white"
                              android:textSize="18sp"
                              android:clickable="false"
                              android:inputType="textPersonName"
                              android:id="@+id/txt_bplo_name_of_taxpayer_name_of_president"/>


                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:textSize="18sp"
                              android:textColor="@color/white"
                              android:text="Owners Gender:" />

                    <RadioGroup android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:id="@+id/rg_bplo_name_of_taxpayer_owners_gender">

                        <RadioButton android:layout_width="wrap_content"
                                     android:layout_height="wrap_content"
                                     android:text="Male"
                                     android:textSize="18sp"
                                     android:clickable="false"
                                     android:textColor="@color/white"
                                     android:id="@+id/rb_bplo_name_of_tax_payer_male"/>
                        <RadioButton android:layout_width="wrap_content"
                                     android:layout_height="wrap_content"
                                     android:text="Female"
                                     android:textSize="18sp"
                                     android:clickable="false"
                                     android:textColor="@color/white"
                                     android:id="@+id/rb_bplo_name_of_tax_payer_female"/>
                        <RadioButton android:layout_width="wrap_content"
                                     android:layout_height="wrap_content"
                                     android:text="JP"
                                     android:textSize="18sp"
                                     android:clickable="false"
                                     android:textColor="@color/white"
                                     android:id="@+id/rb_bplo_name_of_tax_payer_jp"/>
                    </RadioGroup>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>






        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">

            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/phlogo"
                    android:layout_weight="1"
                    android:layout_marginBottom="10dp"/>
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:text="@string/Reps"
                        android:textSize="13dp"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:textStyle="bold"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/Rep"
                        android:textSize="13dp"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:layout_marginBottom="5dp"/>
                <TextView
                        android:text="© 2019 San Pablo City Goverment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="13dp"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:id="@+id/textView8"

                />

            </LinearLayout>

            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/transpa"
                    android:layout_weight="1"
                    android:layout_marginBottom="10dp"/>

        </LinearLayout>

        <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:orientation="horizontal">

            <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                        android:text="Developed by:"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:gravity="center"
                        android:layout_marginStart="5dp"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:layout_marginEnd="3dp"
                />
                <ImageView
                        android:layout_width="90dp"
                        android:layout_height="25dp"
                        android:src="@drawable/pylon"
                        android:layout_marginRight="13dp"/>
            </LinearLayout>
            <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                        android:text="Developer: "
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:gravity="center"
                        android:layout_marginStart="5dp"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                />
                <TextView
                        android:text="Chris Velasco"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>
