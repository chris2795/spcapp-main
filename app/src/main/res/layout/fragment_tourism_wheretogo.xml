<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background"
            android:paddingTop="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
    >
        <LinearLayout android:layout_height="wrap_content"
                      android:layout_width="match_parent"
                      android:gravity="center">

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_marginBottom="4dp"
                    android:gravity="center">

                <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/spc_logo2"
                        android:layout_marginStart="6dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="4dp"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            android:layout_marginTop="13dp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:text="Republic of the Philippines"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="10dp"
                            android:textStyle="bold"
                            android:text="CITY GOVERMENT OF SAN PABLO"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:layout_margin="10dp">
            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="Our Seven Lakes"
                      android:layout_gravity="center"
                      android:gravity="center"
                      android:textSize="20sp"
                      android:textColor="@color/white"
                      android:textStyle="bold"/>
        </LinearLayout>
        <ImageView android:layout_width="match_parent"
                   android:layout_height="200dp"
                   android:src="@drawable/tourism_sampaloc"
                   android:fitsSystemWindows="true"
                   android:layout_gravity="center"
                   android:scaleType="centerInside"
                   android:layout_marginTop="20dp"
                   android:layout_marginLeft="5dp"
                   android:layout_marginRight="5dp"
        />


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SAMPALOC LAKE"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:textSize="15sp"

                    android:textColor="@color/white"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
            />

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sampaloc_lakes"
                    android:textColor="@color/white"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:textSize="13sp"
            />

        </LinearLayout>

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="@drawable/line_border"/>

        <ImageView android:layout_width="match_parent"
                   android:layout_height="200dp"
                   android:src="@drawable/tourism_calibato"
                   android:fitsSystemWindows="true"
                   android:layout_gravity="center"
                   android:scaleType="centerInside"
                   android:layout_marginTop="20dp"
                   android:layout_marginLeft="5dp"
                   android:layout_marginRight="5dp"
        />


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CALIBATO"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:textSize="15sp"

                    android:textColor="@color/white"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
            />

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/calibato_lakes"
                    android:textColor="@color/white"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:textSize="13sp"
            />

        </LinearLayout>

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="@drawable/line_border"/>

        <ImageView android:layout_width="match_parent"
                   android:layout_height="200dp"
                   android:src="@drawable/tourism_bunot"
                   android:fitsSystemWindows="true"
                   android:layout_gravity="center"
                   android:scaleType="centerInside"
                   android:layout_marginTop="20dp"
                   android:layout_marginLeft="5dp"
                   android:layout_marginRight="5dp"
        />


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="BUNOT"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:textSize="15sp"

                    android:textColor="@color/white"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
            />

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/bunot_lakes"
                    android:textColor="@color/white"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:textSize="13sp"
            />

        </LinearLayout>

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="@drawable/line_border"/>

        <ImageView android:layout_width="match_parent"
                   android:layout_height="200dp"
                   android:src="@drawable/tourism_mohicap"
                   android:fitsSystemWindows="true"
                   android:layout_gravity="center"
                   android:scaleType="centerInside"
                   android:layout_marginTop="20dp"
                   android:layout_marginLeft="5dp"
                   android:layout_marginRight="5dp"
        />


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="MOHICAP"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:textSize="15sp"

                    android:textColor="@color/white"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
            />

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/mohicap_lakes"
                    android:textColor="@color/white"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:textSize="13sp"
            />

            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:background="@drawable/line_border"/>

            <ImageView android:layout_width="match_parent"
                       android:layout_height="200dp"
                       android:src="@drawable/tourism_palakpakin"
                       android:fitsSystemWindows="true"
                       android:layout_gravity="center"
                       android:scaleType="centerInside"
                       android:layout_marginTop="20dp"
                       android:layout_marginLeft="5dp"
                       android:layout_marginRight="5dp"
            />


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="PALAKPAKIN"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:textSize="15sp"

                        android:textColor="@color/white"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center"
                />

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/palakpakin_lakes"
                        android:textColor="@color/white"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:textSize="13sp"
                />

                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:background="@drawable/line_border"/>

                <ImageView android:layout_width="match_parent"
                           android:layout_height="200dp"
                           android:src="@drawable/tourism_pandin"
                           android:fitsSystemWindows="true"
                           android:layout_gravity="center"
                           android:scaleType="centerInside"
                           android:layout_marginTop="20dp"
                           android:layout_marginLeft="5dp"
                           android:layout_marginRight="5dp"
                />


                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="PANDIN"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp"
                            android:textSize="15sp"

                            android:textColor="@color/white"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center"
                    />

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/pandin_lakes"
                            android:textColor="@color/white"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:textSize="13sp"
                    />

                </LinearLayout>

                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:background="@drawable/line_border"/>

                <ImageView android:layout_width="match_parent"
                           android:layout_height="200dp"
                           android:src="@drawable/tourism_yambo"
                           android:fitsSystemWindows="true"
                           android:layout_gravity="center"
                           android:scaleType="centerInside"
                           android:layout_marginTop="20dp"
                           android:layout_marginLeft="5dp"
                           android:layout_marginRight="5dp"
                />


                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="YAMBO"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp"
                            android:textSize="15sp"

                            android:textColor="@color/white"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center"
                    />

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/yambo_lakes"
                            android:textColor="@color/white"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:textSize="13sp"
                    />

                </LinearLayout>


            </LinearLayout>
        </LinearLayout>


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center">
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <ImageView
                        android:layout_width="100dp"
                        android:layout_height="70dp"
                        android:src="@drawable/phlogo"
                />


            </LinearLayout>

            <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="18dp"
                        android:text="@string/Reps"
                        android:textSize="10dp"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:textStyle="bold"/>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/Rep"
                        android:textSize="10dp"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:layout_marginBottom="5dp"/>

                <TextView
                        android:text="© 2019 San Pablo City Goverment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:id="@+id/textView8"/>

            </LinearLayout>
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <ImageView
                        android:layout_width="100dp"
                        android:layout_height="70dp"
                        android:src="@drawable/transpa"
                />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:orientation="horizontal">

            <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                        android:text="Developed by:"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:gravity="center"
                        android:layout_marginStart="5dp"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:layout_marginEnd="3dp"
                />
                <ImageView
                        android:layout_width="80dp"
                        android:layout_height="21dp"
                        android:src="@drawable/pylon"
                        android:layout_marginRight="13dp"/>
            </LinearLayout>
            <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                        android:text="Developer: "
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:gravity="center"
                        android:layout_marginStart="5dp"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                />
                <TextView
                        android:text="Chris Velasco"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
</ScrollView>