<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:background="@drawable/background">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Print Mayor's Permit"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:paddingBottom="10dp"
            android:paddingTop="5dp"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Payment Reference Number:"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center"/>


    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="110-223-221"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_marginBottom="5dp"
            android:id="@+id/txt_mp_refnumber_confirmation"
            android:layout_gravity="center"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email Address"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center"/>


    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="sample@gmail.com"
            android:inputType="textEmailAddress"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_marginBottom="5dp"
            android:id="@+id/txt_mp_email_confirmation"
            android:layout_gravity="center"/>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">

        <Button android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_gravity=""
                android:background="@drawable/text_border"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:layout_margin="15dp"
                android:text="Confirm"
                android:id="@+id/btn_mp_confirm"
                android:textSize="15sp"/>

        <Button android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_gravity=""
                android:background="@drawable/text_border"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:layout_margin="15dp"
                android:text="Edit"
                android:id="@+id/btn_mp_edit"
                android:textSize="15sp"/>


        <Button android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_gravity=""
                android:background="@drawable/text_border"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:layout_margin="15dp"
                android:text="Cancel"
                android:id="@+id/btn_mp_cancel"
                android:textSize="15sp"/>


    </LinearLayout>



</LinearLayout>