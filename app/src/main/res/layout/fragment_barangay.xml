<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

<LinearLayout android:layout_width="match_parent"
              android:layout_height="match_parent"
                android:orientation="vertical">


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="horizontal"
    >

        <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/spc_logo"
                android:id="@+id/imageView2"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Republic of the Philippines"
                    android:textColor="@color/white"
                    android:layout_marginTop="20dp"
            />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CITY OF SEVEN LAKES"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:layout_marginTop="3dp"

            />

        </LinearLayout>

    </LinearLayout>

    <ImageView android:layout_width="match_parent"
               android:layout_height="270dp"
               android:src="@drawable/slake5"
               android:fitsSystemWindows="true"
               android:layout_gravity="center"
               android:scaleType="centerCrop"
               android:padding="10dp"
               android:layout_marginLeft="10dp"
               android:layout_marginRight="10dp"
    />


    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="List of Baranagay"
                android:textStyle="bold"
                android:paddingLeft="20dp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:textSize="23dp"
                android:textColor="@color/white"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
        />

        <ListView
                android:contextClickable="true"
                android:id="@+id/listview_barangay"
                android:layout_width="match_parent"
                android:layout_height="400dp"/>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="61dp"
                android:text="@string/tab_govphil"
                android:layout_marginTop="8dp"
                android:textSize="11sp"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="@color/white"

        />

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginBottom="8dp"
        >


            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/asti"
                    android:id="@+id/imageView5"
                    android:layout_weight="1"
                    android:layout_marginRight="7dp"/>
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/dict"
                    android:id="@+id/imageView6"
                    android:layout_weight="1"/>

        </LinearLayout>


    </LinearLayout>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center">
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <ImageView
                    android:layout_width="130dp"
                    android:layout_height="70dp"
                    android:src="@drawable/phlogo"
            />


        </LinearLayout>

        <LinearLayout
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="18dp"
                    android:text="@string/Reps"
                    android:textSize="10dp"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textStyle="bold"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Rep"
                    android:textSize="10dp"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:layout_marginBottom="5dp"/>

            <TextView
                    android:text="Â© 2019 San Pablo City Goverment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:id="@+id/textView8"/>

        </LinearLayout>
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <ImageView
                    android:layout_width="130dp"
                    android:layout_height="70dp"
                    android:src="@drawable/transpa"
            />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

        <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                    android:text="Developed by:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:gravity="center"
                    android:layout_marginStart="5dp"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:layout_marginEnd="3dp"
            />
            <ImageView
                    android:layout_width="80dp"
                    android:layout_height="21dp"
                    android:src="@drawable/pylon"
                    android:layout_marginRight="13dp"/>
        </LinearLayout>
        <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                    android:text="Developer: "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:gravity="center"
                    android:layout_marginStart="5dp"
                    android:textColor="@color/white"
                    android:textAlignment="center"
            />
            <TextView
                    android:text="Chris Velasco"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:gravity="center"

                    android:textColor="@color/white"
                    android:textAlignment="center"
            />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>




</ScrollView>