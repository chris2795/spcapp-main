<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

  <LinearLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
  >

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="horizontal"
    >

      <ImageView
              android:layout_width="80dp"
              android:layout_height="80dp"
              android:src="@drawable/spc_logo"
              android:id="@+id/imageView2"
              android:layout_marginStart="4dp"
              android:layout_marginTop="4dp"/>

      <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:gravity="center">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Republic of the Philippines"
                android:textColor="@color/white"
                android:layout_marginTop="20dp"
        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CITY OF SEVEN LAKES"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="25dp"
                android:layout_marginTop="3dp"

        />

      </LinearLayout>

    </LinearLayout>

    <ImageView android:layout_width="match_parent"
               android:layout_height="270dp"
               android:src="@drawable/lights"
               android:fitsSystemWindows="true"
               android:layout_gravity="center"
               android:scaleType="centerCrop"
               android:padding="10dp"
               android:layout_marginLeft="10dp"
               android:layout_marginRight="10dp"
    />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
    >
      <LinearLayout
              android:layout_width="95dp"
              android:layout_height="95dp"
              android:orientation="vertical"
              android:background="@drawable/text_border"
              android:layout_marginRight="5dp">

        <Button
                android:id="@+id/btn_historycity"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@drawable/citys"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:text="The City"
                android:paddingTop="5dp"
                android:textSize="13sp"
                android:textColor="@color/white"
        />

      </LinearLayout>
      <LinearLayout
              android:layout_width="95dp"
              android:layout_height="95dp"
              android:orientation="vertical"
              android:background="@drawable/text_border"
              android:layout_marginRight="5dp">


        <Button
                android:id="@+id/btn_sanpablosscity"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@drawable/sanpablenos"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:paddingTop="5dp"
                android:textSize="13sp"
                android:text="San PableÃ±os"
                android:textColor="@color/white"
        />
      </LinearLayout>

      <LinearLayout
              android:layout_width="95dp"
              android:layout_height="95dp"
              android:orientation="vertical"
              android:background="@drawable/text_border"
              android:layout_marginRight="5dp">

        <Button
                android:id="@+id/btn_barangaycity"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@drawable/barangays"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:text="Barangay"
                android:paddingTop="5dp"
                android:textSize="13sp"
                android:textColor="@color/white"
        />
      </LinearLayout>

      <LinearLayout
              android:layout_width="95dp"
              android:layout_height="95dp"
              android:orientation="vertical"
              android:background="@drawable/text_border">


        <Button
                android:id="@+id/btn_hymncity"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@drawable/hymn2"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:text="Hymn"
                android:textSize="13sp"
                android:paddingTop="5dp"
                android:textColor="@color/white"
        />
      </LinearLayout>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
      <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="HISTORY"
              android:textStyle="bold"
              android:paddingLeft="20dp"
              android:paddingBottom="5dp"
              android:paddingTop="5dp"
              android:textSize="23dp"
              android:textColor="@color/white"
              android:layout_marginBottom="5dp"
              android:layout_marginTop="10dp"
              android:layout_gravity="center"
      />

      <me.biubiubiu.justifytext.library.JustifyTextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="@string/history1"
              android:textColor="@color/white"
              android:layout_marginStart="27dp"
              android:textSize="15dp"
      />

      <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="The Pre-Hispanic Village of Sampalok"
              android:textStyle="bold"
              android:paddingLeft="20dp"
              android:paddingBottom="5dp"
              android:paddingTop="5dp"
              android:textSize="22dp"
              android:textColor="@color/white"
              android:layout_marginBottom="5dp"
              android:layout_marginTop="10dp"
              android:layout_gravity="center"
      />

      <me.biubiubiu.justifytext.library.JustifyTextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="@string/Sampalok"
              android:textColor="@color/white"
              android:layout_marginStart="27dp"
              android:textSize="15dp"
      />

      <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="The Coming of Spaniards"
              android:textStyle="bold"
              android:paddingLeft="20dp"
              android:paddingBottom="5dp"
              android:paddingTop="5dp"
              android:textSize="22dp"
              android:textColor="@color/white"
              android:layout_marginBottom="5dp"
              android:layout_marginTop="10dp"
              android:layout_gravity="center"
              app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"/>

      <me.biubiubiu.justifytext.library.JustifyTextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="@string/Spaniards"
              android:textColor="@color/white"
              android:layout_marginStart="27dp"
              android:textSize="15dp"
      />

      <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="American Occupation"
              android:textStyle="bold"
              android:paddingLeft="20dp"
              android:paddingBottom="5dp"
              android:paddingTop="5dp"
              android:textSize="22dp"
              android:textColor="@color/white"
              android:layout_marginBottom="5dp"
              android:layout_marginTop="10dp"
              android:layout_gravity="center"
              app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"/>

      <me.biubiubiu.justifytext.library.JustifyTextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="@string/american"
              android:textColor="@color/white"
              android:layout_marginStart="27dp"
              android:textSize="15dp"/>


      <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Japanese Occupation"
              android:textStyle="bold"
              android:paddingLeft="20dp"
              android:paddingBottom="5dp"
              android:paddingTop="5dp"
              android:textSize="22dp"
              android:textColor="@color/white"
              android:layout_marginBottom="5dp"
              android:layout_marginTop="10dp"
              android:layout_gravity="center"/>

      <me.biubiubiu.justifytext.library.JustifyTextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="@string/japanese"
              android:textColor="@color/white"
              android:layout_marginStart="27dp"
              android:textSize="15dp"/>

      <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Modern History"
              android:textStyle="bold"
              android:paddingLeft="20dp"
              android:paddingBottom="5dp"
              android:paddingTop="5dp"
              android:textSize="22dp"
              android:textColor="@color/white"
              android:layout_marginBottom="5dp"
              android:layout_marginTop="10dp"
              android:layout_gravity="center"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"/>

      <me.biubiubiu.justifytext.library.JustifyTextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="@string/marcos"
              android:textColor="@color/white"
              android:layout_marginStart="27dp"
              android:textSize="15dp"/>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

      <TextView
              android:layout_width="match_parent"
              android:layout_height="61dp"
              android:text="@string/tab_govphil"
              android:layout_marginTop="8dp"
              android:textSize="11sp"
              android:textAlignment="center"
              android:gravity="center"
              android:textColor="@color/white"

      />

      <LinearLayout
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="55dp"
              android:layout_marginBottom="8dp"
      >


        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/asti"
                android:id="@+id/imageView5"
                android:layout_weight="1"
                android:layout_marginRight="7dp"/>
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/dict"
                android:id="@+id/imageView6"
                android:layout_weight="1"/>

      </LinearLayout>


    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">

      <ImageView
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              app:srcCompat="@drawable/phlogo"
              android:layout_weight="1"
              android:layout_marginBottom="15dp"/>

      <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:orientation="vertical">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:text="@string/Reps"
                android:textSize="10dp"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textStyle="bold"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Rep"
                android:textSize="10dp"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:layout_marginBottom="2dp"/>

        <TextView
                android:text="Â© 2019 San Pablo City Goverment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:textColor="@color/white"
                android:textAlignment="center"

                android:id="@+id/textView8"/>

      </LinearLayout>

      <ImageView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              app:srcCompat="@drawable/transpa"
              android:layout_weight="1"
              android:layout_marginBottom="15dp"/>
    </LinearLayout>

  </LinearLayout>

</ScrollView>