                            android:layout_margin="2dp"
                            android:textColor="@color/darkgray"
                            android:textSize="18sp"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/darkgray"
                            android:text="Total Processing Time:"
                            android:layout_margin="2dp"
                            />
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="15 minutes"
                            android:layout_margin="2dp"
                            android:textColor="@color/darkgray"
                            android:textSize="18sp"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/darkgray"
                            android:text="Schedule of Service Availability:"
                            android:layout_margin="2dp"
                            />

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Monday to Friday – 8:00 to 5:00pm (No Noon Break) "
                            android:layout_margin="2dp"
                            android:textColor="@color/darkgray"
                            android:textSize="18sp"/>
                </LinearLayout>


            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                android:background="@drawable/text_border"
                android:gravity="center"
                android:elevation="6dp"
                android:orientation="vertical">
            <LinearLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="vertical">


                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/darkgray"
                            android:text="Frontline Services:"
                            android:layout_margin="2dp"
                            />
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="ISSUANCE TRICYCLE FRANCHISE and MAYOR'S PERMIT FOR TRICYCLE OPERATORS(new/renewal)"
                            android:layout_margin="2dp"
                            android:textColor="@color/darkgray"
                            android:textSize="18sp"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:textColor="@color/darkgray"
                            android:text="Clients:"
                            android:textStyle="bold"
                            android:layout_margin="2dp"
                            />
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Tricycle Operators"
                            android:layout_margin="2dp"
                            android:textColor="@color/darkgray"
                            android:textSize="18sp"/>
                </LinearLayout>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="@color/darkgray"
                        android:text="Requirements:"
