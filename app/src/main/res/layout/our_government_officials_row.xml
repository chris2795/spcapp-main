<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="180dp"
        android:layout_height="250dp">

<LinearLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_height="match_parent">

    <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/ic_human"
            android:id="@+id/local_city_local_officials_row_img"
            tools:ignore="ContentDescription" />

    <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textColor="@color/bluess"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="13sp"
            android:id="@+id/local_city_local_officials_row_txt_name"
            android:text="@string/hon_loreto_s_amante"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/bluess"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="13sp"
            android:id="@+id/local_city_local_officials_row_txt_post"
            android:text="President"/>




</LinearLayout>




</android.support.v7.widget.CardView>